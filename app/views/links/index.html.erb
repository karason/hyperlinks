<center>
<h1>listing links</h1>

<table>
  <tr>
    <th>link</th>
    <th>alias</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%= link.link %></td>
    <td><%= link.alias %></td>
    <td><%= link_to 'view', link %></td>
    <td><%= link_to 'edit', edit_link_path(link) %></td>
    <td><%= link_to 'delete', link, method: :delete, data: { confirm: 'delete?' } %></td>
  </tr>
<% end %>
</table>

<br />

